<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.foodorderapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.FoodOrderApp">
        <activity android:name=".LoginAccount"/>
        <activity android:name=".ui.profile.ProfileFragment"/>
        <activity android:name=".profile.AboutApp"/>
        <activity android:name=".profile.ProfileCustomer"/>
        <activity android:name=".profile.ContactDev"/>
        <activity android:name=".profile.OrderHistory"/>
        <activity android:name=".profile.PaymentHistory"/>
        <activity android:name=".ViewOrderDetail"/>
        <activity android:name=".CreateAccount"/>
        <activity android:name=".OrderSucceessActivity" />
        <activity android:name=".PlaceYourOrderActivity" />
        <activity android:name=".RestaurantMenuActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>